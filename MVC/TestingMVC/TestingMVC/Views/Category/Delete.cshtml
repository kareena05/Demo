@model Category


@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Category</h1>
<form method="post" asp-action="DeletePost">
    <input type="text" asp-for="Id" class="form-control" />
    <div class="mb-3">
        <label asp-for="name" class="form-label"></label>
        <input type="text" asp-for="name" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
       
    </div>
    <div class="mb-3">
        <label asp-for="display_order" class="form-label"></label>
        <input type="number" asp-for="display_order" class="form-control" id="exampleInputPassword1">
        
    </div>
  
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Back to List</a>
</form>

@section Scripts{
    @{
       <partial name="_ValidationScriptsPartial"/>
    }
}

